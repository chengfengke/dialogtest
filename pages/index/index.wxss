/*功能栏*/
.funcitonlist{
  margin-top: 50rpx;
  display: grid;
  grid-template-columns:repeat(auto-fill,100px);/** 平铺宽度为100px的单元格 */
  grid-template-rows: 150rpx;/** 设置高度为100px */
  grid-auto-rows: 150rpx;/** 当容易高度不够时，多余的组件高度将怎么分配，默认的高度由单元格内容决定 */
  justify-content: center;/** 水平居中  */
                        
}
.funtionitem {
  font-size: 1em;
  border: 1px solid #e5e4e9;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
