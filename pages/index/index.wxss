/* 文本样式 */
.text {
  font-size: 16px; /* 字体大小 */
  color: #333; /* 字体颜色 */
}


/* 展示区域的容器样式 */
.demo-container {
  background-color: lightpink; /* 浅粉色背景 */
  margin: 16px;
  padding: 10px;
  border-radius: 8px; /* 圆角 */
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); /* 阴影效果 */
}

/* Vant Cell 样式调整，如果需要的话 */
.van-cell {
  padding: 10px;
  border-radius: 4px;
  margin-bottom: 10px; /* 添加间隔 */
}

.van-cell:last-child {
  margin-bottom: 0; /* 最后一个 cell 不需要底部间隔 */
}

/* Vant Icon 样式调整，如果需要的话 */
.van-icon {
  font-size: 20px; /* 图标大小 */
  color: #1989fa; /* 图标颜色 */
}


/* 底部导航样式 */
van-tabbar {
  position: fixed;
  bottom: 0;
  width: 100%;
  box-shadow: 0 -1px 10px rgba(0, 0, 0, 0.1); /* 顶部阴影 */
}

/* 底部导航项样式 */
van-tabbar-item {
  color: #7c7c7c; /* 默认颜色 */
}

van-tabbar-item.van-tabbar-item--active {
  color: #09BB07; /* 激活颜色 */
}

