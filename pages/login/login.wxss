/* index.wxss */
.page {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: start;
  width: 100%;
  height: 50vh;
}


.login-button {
  margin-top: 50px;
  width: 80px; /* 根据实际需要调整宽度 */
}

.agreement {
  text-align: center;
  font-size: 14px;
  color: #808080;
  margin-top: 50px;
}

.status-bar {
  height: 20px; /* 根据实际状态栏高度调整 */
}

.header {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.avatar {
  margin-top: 140px;
  width: 140px;
  height: 140px;
  border-radius: 50%;
  margin-bottom: 20px;
}

.title {
  font-size: 30px;
  color: #000;
}

.button-container {
  margin-top: 60px;
  margin-bottom: 20px;
}

.login-button {
  background-color: #07c160;
  color: #ffffff;
  border-radius: 10px;
  width: 40vh;
  display: flex;
  align-items: center;
  padding-left: 20px;
  justify-content: flex-start;
}

.phone-login {
  width: 40vh;
  display: flex;
  align-items: center;
  padding-left: 20px;
  justify-content: flex-start;
  border-radius: 10px;
  border: 1px solid #cccccc;
  background-color: #ffffff;
}
.phone-icon {
  margin-right: 25%;
}
.footer {
  margin-top: 200px;
  padding: 10px;
  font-size: 14px;
}

.highlight {
  color: #576b95;
}

.input-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20px;
}

.input-label {
  font-size: 16px;
  color: #333;
}

.input-code {
  flex-grow: 1;
  margin-left: 10px;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
}
