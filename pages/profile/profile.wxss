/* pages/Profile/Profile.wxss */
.footer-nav {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1; /* 保证每个nav-item都有相同的空间 */
}

.nav-divider {
  height: 50%;
  width: 1px;
  background-color: #000; /* 你可以调整为需要的颜色 */
}

.nav-icon {
  width: 24px; /* 或根据需要进行调整 */
  height: 24px; /* 或根据需要进行调整 */
}

.nav-text {
  font-size: 12px; /* 或根据需要进行调整 */
}
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: #fff;
}


.profile {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-bottom: 10px;
}

.username {
  font-weight: bold;
}

.userid {
  color: #888;
  margin-bottom: 20px;
}

.coins {
  display: flex;
  align-items: center;
  padding: 10px;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.coin-amount {
  margin: 10px 10px;
  flex-grow: 1;
}

.recharge-btn {
  color: #fff;
  background-color: #1e90ff;
  padding: 5px 10px;
  border-radius: 5px;
  width: 10px;
  height: 34px;
}

.function-list {
  margin-top: 20px;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #eee;
}
.balance {
  display: flex;
  align-items: center;
}

.item-text {
  margin-left: 10px;
  flex-grow: 1;
}
