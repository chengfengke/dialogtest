/*四个按钮*/
.function-list {
  display: flex;
  flex-direction: column;
  align-items: center; 
  margin-top: 20px;
}

.function-item {
  margin-top: 20rpx;
  width: 650rpx;
  display: flex;
  border-bottom: 1px solid #eee;
  border-radius: 20rpx; /* Border-radius for all items */
  background-color: white;
  align-items: center;
  justify-content:flex-start;
  margin-bottom: 15rpx; /* Consistent margin-bottom for all items */
}

.function-icon {
  width: 50rpx; 
  height: 50rpx; 
  margin-right: 180rpx; 
} 


