/* pages/Profile/Profile.wxss */
.footer-nav {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1; /* 保证每个nav-item都有相同的空间 */
}

.nav-divider {
  height: 50%;
  width: 1px;
  background-color: #000; /* 你可以调整为需要的颜色 */
}

.nav-icon {
  width: 24px; /* 或根据需要进行调整 */
  height: 24px; /* 或根据需要进行调整 */
}

.nav-text {
  font-size: 12px; /* 或根据需要进行调整 */
}
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: #fff;
}


.profile {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.avatar {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  margin-bottom: 10px;
}

.username {
  font-weight: bold;
  font-size: 50rpx;
}

.userid {
  color: #888;
}

