.app-avatar {
  width: 60rpx;
  height: 60rpx;
  margin-top: 20px;
  margin-left: 30px;
}

.return-icon {
  width: 30rpx;
  height: 30rpx;
  padding: 7px;
  margin-top: 26px;
  border-radius: 10px;
  background-color: rgba(255, 255, 255, 0.979);
}

/* 应用信息样式 */
.app-info {
  display: flex;
  align-items: center;
  transform: translateX(-10%);
  flex-direction: column;
  flex-grow: 1; /* 让app-info填充剩余空间 */
  margin-right: 10px; 
}

.header {
  display: flex;
  align-items: center; /* 确保子项垂直居中 */
  justify-content: start; /* 子项靠左对齐 */
  background-color: #00a2ff; /* 蓝色背景 */
  padding: 10px 15px; /* 上下各10px，左右各15px的内边距 */
  height: 70px; /* 导航栏高度 */
  position: relative; /* 相对定位 */
  border-radius: 10px;
}

.nav-icon {
  position: absolute; /* 绝对定位 */
  top: 40%; /* 垂直居中 */
  font-size: 30px;
}
/* 导航图标样式 */
.icon-image {
  width: 30px;
  height: 30px;
  margin-right: 10px; /* 与标题的间隔 */
}

/* 顶部标题样式 */
.header-title {
  position: absolute; /* 绝对定位 */
  left: 50%; /* 水平居中 */
  top: 60%; /* 垂直居中 */
  transform: translate(-50%, -10px); /* 左右居中并向下移动 */
  color: #ffffff; /* 字体颜色 */
  font-size: 18px; /* 字体大小 */
  font-weight: bold; /* 字体粗细 */
  text-align: center; /* 文字居中对齐 */
}

.container {
  background: linear-gradient(to bottom, #bcf5ff, rgb(238, 238, 238));
  height: 90vh; /* 保持全屏高度 */
  padding: 10px;
}

/* 消息容器样式 */
.message-container {
  display: flex;
  align-items: flex-start;
  margin: 4px 0;
}

/* 消息样式 */
.message {
  display: inline-block; /* 使 div 表现得像 inline 元素一样 */
  max-width:26vh;
  padding: 10px;
  margin: 0 10px;
  word-break: break-word; /* 防止内容溢出 */
}

/* 用户消息样式 */
.message.user {
  background-color: #30b2fd; /* 用户消息背景颜色 */
  margin-left: auto;
  border-radius: 15px 0px 15px 15px;
  color: white; /* 用户消息字体颜色 */
  text-align: right; /* 文本右对齐 */
  align-self: flex-end; 
}


/* 系统消息样式 */
.message.bot {
  background-color: #ffffff;
  color: black;
  border-radius: 0px 15px 15px 15px;
  align-self: flex-start; /* 系统消息靠左 */
}

.input-container {
  display: flex;
  justify-content: space-between; /* 确保组件之间有空隙 */
  align-items: center; /* 垂直居中 */
  padding-left: 15px;
  padding-right: 15px;
  width: 40vh;
  background-color: #FFF; /* 或者根据您的UI主题颜色 */
  border-top: none; /* 取消顶部边界线 */
  border-radius: 30px; /* 调整这个值来改变圆角的弯曲程度 */
}
.input-inner-container {
  display: flex;
}

.van-field {
  margin-left: 1px;
  flex-grow: 1; /* 输入框填充剩余空间 */
  margin-right: 1px; /* 保持按钮和输入框的间距 */
}

.van-button {
  min-width: 20px; /* 保证按钮宽度足够 */
}
.messages {
  flex: 1; /* 消息视图填充可用空间 */
  overflow-y: auto; /* 允许在Y轴上滚动 */
  padding: 10px 5px; /* 调整内边距，确保消息显示不会太紧凑 */
}

.bot-gif {
  width: 50px; /* 设置图像的固定宽度 */
  height: 50px; /* 设置图像的固定高度 */
}

.user-gif {
  width: 50px; /* 设置图像的固定宽度 */
  height: 50px; /* 设置图像的固定高度 */
  border-radius: 20px;
}
